{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "files": ["src/react-app-env.d.ts"],
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/*.ts"]
}
