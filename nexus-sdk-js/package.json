{
  "name": "@bbp/nexus-sdk",
  "version": "0.2.0",
  "description": "JavaScript SDK from Nexus",
  "keywords": [
    "typescript",
    "nexus",
    "sdk",
    "bbp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlueBrain/nexus-webapp-commons/tree/master/nexus-sdk-js"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "unpkg": "dist/nexus-sdk.js",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "lint": "tslint src/**/*",
    "build": "npm run clean && npm run build:commonjs && npm run build:es && npm run build:umd",
    "build:commonjs": "tsc --module commonjs --target es2015 --outDir lib",
    "build:es": "tsc --module es2015 --target es2015 --outDir es",
    "build:umd": "rollup -c",
    "documentation": "typedoc --out documentation/ --exclude \"**/*+(test|spec).ts\" src/",
    "clean": "rm -fr es/ && rm -fr dist/ && rm -fr lib/ && rm -fr documentation/",
    "prepublishOnly": "npm run clean && npm run test && npm run lint && npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@types/jest": "^23.3.12",
    "@types/node-fetch": "^2.1.4",
    "eslint": "^5.12.0",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^2.1.0",
    "rollup": "^1.1.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.2",
    "rollup-plugin-typescript": "^1.0.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typedoc": "^0.14.1",
    "typescript": "^3.2.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "./test/setupJest.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "cross-fetch": "^3.0.0"
  }
}
