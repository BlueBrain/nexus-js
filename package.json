{
  "name": "@bbp/nexus-sdk",
  "version": "1.0.0-beta.16",
  "description": "JavaScript SDK from Nexus",
  "keywords": [
    "typescript",
    "nexus",
    "sdk",
    "bbp"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlueBrain/nexus-webapp-commons/tree/master/nexus-sdk-js"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "unpkg": "dist/nexus-sdk.js",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest --coverage",
    "codecov": "codecov",
    "lint": "tslint src/**/*",
    "build": "npm run clean && npm run build:commonjs && npm run build:es && npm run build:umd",
    "build:commonjs": "tsc --module commonjs --target es5 --outDir lib",
    "build:es": "tsc --module es2015 --target es5 --outDir es",
    "build:umd": "rollup -c",
    "documentation": "typedoc --out documentation/ --exclude \"**/*+(test|spec).ts\" src/",
    "clean": "rm -fr es/ && rm -fr dist/ && rm -fr lib/ && rm -fr documentation/",
    "prepublishOnly": "npm run clean && npm run test && npm run lint && npm run build"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@types/eventsource": "^1.1.0",
    "@types/jest": "^24.0.11",
    "@types/node-fetch": "^2.1.6",
    "codecov": "^3.2.0",
    "eslint": "^5.15.1",
    "husky": "^1.3.1",
    "jest": "^24.3.1",
    "jest-fetch-mock": "^2.1.1",
    "rollup": "^1.6.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-typescript": "^1.0.0",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.13.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "automock": false,
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "./test/setupJest.js"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "cross-fetch": "^3.0.1",
    "eventsource": "^1.0.7",
    "isomorphic-form-data": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint -- -c tslint.prod.json && npm test"
    }
  }
}
