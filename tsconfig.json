{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "es",
    "lib",
    "dist",
    "**/__mocks__/**",
    "**/__tests__/**"
  ],
  "files": ["./scripts/custom.d.ts"]
}
